

<style type="text/css">
    /* body {

    } */
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
  </style>


  <body>
    <div class="ui middle aligned center aligned grid">
      <div class="column">
        <h2 class="ui teal image header">

          <div class="content">
            Log-in to your account
          </div>
        </h2>
          <%= form_tag sessions_create_path, class: "ui large form" do %>
           <div class="ui stacked segment">
             <div class="field">
               <div class="ui left icon input">
                 <i class="user icon"></i>
                 <input type="text" name= "username" placeholder="Username">
               </div>
             </div>
             <div class="field">
               <div class="ui left icon input">
                 <i class="lock icon"></i>
                 <input type="password" name="password" placeholder="Password">
               </div>
             </div>
              <%= submit_tag 'Sign In', class: "ui fluid large teal submit button" %>

           </div>

           <div class="ui error message"></div>


          <% end %>

          <div class="ui message">
            New to us? <a href="#">Sign Up</a>
          </div>

        </div>
      </div>
  </body>

