<%= form_for @ticket do |f|%>
  <%= @show.name %></br>
  Date: <%= @show.date.strftime("%B %d, %Y at %l%P") %></br>
  Venue: <%= @show.venue.name %></br>
  Location: <%= @show.venue.location %></br>
  Band: <%= @show.band.name %></br>
  <%= f.select :ticket_type, ["VIP $#{(@show.price.to_f*1.5)}0", "General Admission $#{@show.price}.00"]%>
  <%= hidden_field_tag"show[show_id]", "#{@show.id}" %>
  <%= hidden_field_tag"show[price]", "#{@show.price}" %>
  <%= f.submit %>
<% end %>
